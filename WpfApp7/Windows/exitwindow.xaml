<Window x:Class="WpfApp7.Windows.exitwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7.Windows"
        mc:Ignorable="d"
        Title="exitwindow" Height="250" Width="400">
    <Grid Background="Black" Margin="0,0,0,-6">
        <Label Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,183">Are you sure you want to exit?</Label>
        <Button Height="30" Width="100" x:Name="btnexit" Click="btnexit_Click" Foreground="White" Background="DarkGreen" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,90,0,0">Yes</Button>
        <Button Height="30" Width="100" x:Name="btnnoexit" Click="btnnoexit_Click" Foreground="White" Background="DarkGreen" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,144,0,0">No</Button>
    </Grid>
</Window>
